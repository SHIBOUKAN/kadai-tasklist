<%= form_for(tasks) do |f| %>
<% if tasks.errors.any? %>

    <div id="error_explanation">
      <ul>
        
<% tasks.errors.full_messages.each do |tasks| %>

          <li>
<%= tasks %>
</li>
        
<% end %>

      </ul>
    </div>
  
<% end %>
<%= f.label :status, '状態' %>

  
<%= f.text_field :status %>

  
<%= f.label :content, 'タスク' %>

  
<%= f.text_field :content %>


  
<%= f.submit '登録' %>

<% end %>