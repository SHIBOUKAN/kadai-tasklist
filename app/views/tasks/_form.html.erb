<div class="row">
  <div class="col-xs-6">
<%= form_for(tasks) do |f| %>
<% if tasks.errors.any? %>


    <div id="error_explanation">
      <ul>
        
<% tasks.errors.full_messages.each do |tasks| %>

          <li>
<%= tasks %>
</li>
        
<% end %>

      </ul>
    </div>
  
<% end %>
<div class="form-group">
<%= f.label :status, '状態' %>

  
<%= f.text_field :status,class: 'form-control' %>
</div>

  <div class="form-group">

  
<%= f.label :content, 'タスク' %>

  
<%= f.text_field :content,class: 'form-control' %>

</div>
  
<%= f.submit '登録', class: 'btn btn-primary' %>

<% end %>
</div>
</div>
