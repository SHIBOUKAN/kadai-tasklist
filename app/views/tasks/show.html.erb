 <h1>id = <%= @tasks.id %> のタスクの詳細ページ</h1>
 <table class="table table-bordered">
  <tr>
    <th>id</th>
    <td>
     <%= @tasks.id %>
</td>
  </tr>
<tr>
    <th>状態</th>
    <td>
<%= @tasks.states %>
</td>
  </tr>
  <tr>
   <th>タスク名</th>
    <td>
<%= @tasks.content %>
</td>
  </tr>
</table>
     <%= link_to '一覧に戻る', tasks_path , class: 'btn btn-default' %>
     <%= link_to 'このtaskを編集する', edit_task_path(@tasks) , class: 'btn btn-default' %>
     <%= link_to 'このtaskを削除する', @tasks, method: :delete , data: { confirm: '本当に削除してよろしいですか？' } , class: 'btn btn-danger'%>